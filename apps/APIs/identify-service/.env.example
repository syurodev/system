# Service Configuration
CONFIG_SERVICE_PORT=3101
CONFIG_SERVICE_GRPC_PORT=5101

# PostgreSQL Database Configuration
CONFIG_PG_USER_HOST=localhost
CONFIG_PG_USER_PORT=5432
CONFIG_PG_USER_USERNAME=postgres
CONFIG_PG_USER_PASSWORD=postgres
CONFIG_PG_USER_DBNAME=postgres
CONFIG_PG_USER_SSL=false
CONFIG_PG_USER_MAX_CONNECTIONS=20
CONFIG_PG_USER_IDLE_TIMEOUT=30000

# Better Auth Configuration
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production-minimum-32-characters
BETTER_AUTH_URL=http://localhost:3101

